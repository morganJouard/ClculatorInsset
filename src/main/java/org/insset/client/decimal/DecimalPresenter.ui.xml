<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
         xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:menu="urn:import:org.insset.client.menu">

    <g:HTMLPanel>
        <menu:Menu ui:field="menu"/>
        <h1>Projet de mise en pratique Scrum</h1>       
        <div class="bs-section">

            <g:FlowPanel>

                <g:FlowPanel>
                    <g:Label>Montant Pourcentage de Reduction</g:Label>
                </g:FlowPanel>
                <g:FlowPanel>          
                  <g:TextBox ui:field="montant" text=""/>
                  <g:TextBox ui:field="pourcent" text=""/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label ui:field="errorLabelPourcent" ></g:Label>
                </g:FlowPanel>

                    <g:SubmitButton ui:field="boutonEnregistrerPourcent" text="Envoyer"/>
                    <g:ResetButton ui:field="boutonClearPourcent" text="Clear"/>

            </g:FlowPanel>
            <g:FlowPanel>

                <g:FlowPanel>
                    <g:Label>Diviseur Dividende</g:Label>
                </g:FlowPanel>
                <g:FlowPanel>          
                  <g:TextBox ui:field="diviseur" text=""/>
                  <g:TextBox ui:field="dividende" text=""/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label ui:field="errorLabelDivision" ></g:Label>
                </g:FlowPanel>

                    <g:SubmitButton ui:field="boutonEnregistrerDivision" text="Envoyer"/>
                    <g:ResetButton ui:field="boutonClearDivision" text="Clear"/>

            </g:FlowPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
